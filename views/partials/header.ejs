<header>
  <nav>
    <a href="/" class="nav-brand">
      <i class="fas fa-wallet"></i>
      <span>Expense Tracker</span>
    </a>
    <ul class="nav-links">
      <% if (typeof user !== 'undefined' && user) { %>
        <% if (user.isAdmin) { %>
          <li><a href="/admin"><i class="fas fa-shield-alt"></i> Owner</a></li>
        <% } %>
        <li><a href="/expense"><i class="fas fa-chart-line"></i> Dashboard</a></li>
        <li><a href="/add-expense"><i class="fas fa-plus"></i> Add Expense</a></li>
        <li class="nav-user">
          <i class="fas fa-user-circle"></i>
          <span><%= user.displayName || user.name || user.gmail %></span>
        </li>
        <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
      <% } else { %>
        <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Login</a></li>
        <li><a href="/register"><i class="fas fa-user-plus"></i> Register</a></li>
      <% } %>
    </ul>
  </nav>
</header>
